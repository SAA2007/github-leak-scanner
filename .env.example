# GitHub API Configuration
# Get your token from: https://github.com/settings/tokens
# Required permissions: public_repo (or repo for private repos)
GITHUB_TOKEN=your_github_token_here

# Scan Mode: 'search' to discover repos automatically, 'user' to scan specific users
SCAN_MODE=search

# User Mode Configuration (only used when SCAN_MODE=user)
# Comma-separated list of GitHub usernames or organizations
GITHUB_USERS=user1,user2,organization1

# Search Mode Configuration (only used when SCAN_MODE=search)
# Maximum stars threshold - focus on less popular repos
MAX_STARS_THRESHOLD=50

# Minimum recency in days - only scan repos updated in last N days
MIN_RECENCY_DAYS=180

# Tool Paths
GITLEAKS_PATH=gitleaks.exe
TRUFFLEHOG_PATH=trufflehog

# Scanning Configuration
SCAN_INTERVAL_HOURS=24
MAX_CONCURRENT_REPOS=3
OUTPUT_DIR=scan_results

# Enable/Disable Features
ENABLE_NOTIFICATIONS=false
ENABLE_SCHEDULER=false

# Database
DATABASE_PATH=scans.db

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/scanner.log
